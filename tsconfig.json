{
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "sourceMap": false,
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitOverride": true,
    "strict": true
  },
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "esm": true,
    "swc": true,
    "transpileOnly": true
  }
}
